<html>
  <head>
    <title>String and Math Functions</title>
  </head>
  <body>
    <h3>STRING FUNCTIONS</h3>

    <script>
      // --- String Functions ---
      var s1 = "welcome to jsprogramming";
      document.writeln(s1 + "<br>");
      document.writeln(typeof s1 + "<br>");

      var s2 = s1.toUpperCase();
      document.writeln(s2.toLowerCase() + "<br>");

      var s3 = "  Hello  ";
      document.writeln(s3.concat(s3) + "<br>");
      var s4 = s3.trim(); // trims only leading and trailing spaces
      document.writeln(s4 + "<br>");

      document.writeln("charAt(3): " + s1.charAt(3) + "<br>");

      var s5 = new String("string object");
      document.writeln(typeof s5 + "<br>");

      document.writeln("indexOf('o') is: " + s1.indexOf("o") + "<br>");
      document.writeln("lastIndexOf('o') is: " + s1.lastIndexOf("o") + "<br>");
      document.writeln("indexOf('o',6) is: " + s1.indexOf("o", 6) + "<br>");
      document.writeln("search('o') is: " + s1.search("o") + "<br>");
      document.writeln("slice(0,7): " + s1.slice(0, 7) + "<br>");
      document.writeln("slice(10): " + s1.slice(10) + "<br>");
      document.writeln("slice(-11): " + s1.slice(-11) + "<br>");
      document.writeln("slice(-11,-1): " + s1.slice(-11, -1) + "<br>");
      document.writeln("substring(0,12): " + s1.substring(0, 12) + "<br>");
      document.writeln("substr(0,10): " + s1.substr(0, 10) + "<br>");
      document.writeln("replace('js','javascript'): " + s1.replace("js", "javascript") + "<br>");

      // Loop through string characters
      for (var i = 0; i < s4.length; ++i) {
        document.writeln(s4[i] + "<br>");
      }

      // --- Math Functions ---
      document.writeln("<h3>MATH FUNCTIONS</h3>");

      document.writeln("Euler's number is: " + Math.E + "<br>");
      document.writeln("Value of PI is: " + Math.PI + "<br>");
      document.writeln("Square root of 2 is: " + Math.SQRT2 + "<br>");
      document.writeln("Square root of 1/2 is: " + Math.SQRT1_2 + "<br>");
      document.writeln("Log 2 is: " + Math.LN2 + "<br>");
      document.writeln("Log 10 is: " + Math.LN10 + "<br>");
      document.writeln("Log E base 2 is: " + Math.LOG2E + "<br>");
      document.writeln("Log E base 10 is: " + Math.LOG10E + "<br>");
      document.writeln("Absolute value of -5 is: " + Math.abs(-5) + "<br>");
      document.writeln("Cube root of 27 is: " + Math.cbrt(27) + "<br>");
      document.writeln("Round up 2.45: " + Math.ceil(2.45) + "<br>");
      document.writeln("exp(3): " + Math.exp(3) + "<br>");
      document.writeln("2 to the power 3 is: " + Math.pow(2, 3) + "<br>");
      document.writeln("Minimum of 5,2,1 is: " + Math.min(5, 2, 1) + "<br>");
      document.writeln("Maximum of 7,10,3,1 is: " + Math.max(7, 10, 3, 1) + "<br>");
      document.writeln("Square root of 25 is: " + Math.sqrt(25) + "<br>");
      document.writeln("Truncated value of 4.56 is: " + Math.trunc(4.56) + "<br>");
      document.writeln("Rounded value of 6.2 is: " + Math.round(6.2) + "<br>");
      document.writeln("Random number is: " + Math.random() + "<br>");
    </script>
  </body>
</html>
