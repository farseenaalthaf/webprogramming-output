<!DOCTYPE html>
<html>
<head>
<style>

        body {
            background-color: #FAFAD2;
        }

        h2 {
            color: #333;
			font-family:cursive;
            text-align:center;
			font-size:37px;
			margin-left:10px;
        }

        form {
                display: grid;
				grid-template-columns:150px 1fr;
				gap:10px 20px;
				width:400px;
				margin: 0 auto;
        }
        label {
                 font-style:bolder;
			     font-size:17px;
			     font-weight:700;
        }

        input {
               border: none;
               border-radius: 5px;
               margin-bottom: 15px;
               font-size: 14px;
        }

        button {
                 width: 400px;
                 padding: 10px;
                 background-color: #8B008B;
                 color: white;
                 border: none;
                 border-radius: 5px;
                 font-size: 16px;
        }

        button:hover {
            background-color: #005ea6;
        }
</style>
   <title>Form Validation</title>
	<script>
			function validate()
			        {
					var name= document.getElementById("nme").value;
					var passwd = document.getElementById("pwd").value;
					var phone= document.getElementById("phn").value;
					var repass = document.getElementById("repwd").value;
					if(name=="")
					{
					    alert("Enter a name");
						return false;   
					}
					for(i=0;i<name.length;i++){
					   if(!isNaN(name[i]))
					   {
					       alert("entered as wrong!11Name should not be a number");
						   return false;
					    }
					}
					if (passwd == "") 
					{
						alert("Enter a Password");
						return false;
					}
					else if (passwd.length < 8)
					{
							alert("Password requires at least 8 characters");
							return false;
					}
					if(phone=="")
					{
					    alert("Enter your mobile number");
						return false;   
					}
					for(i=0;i<phone.length;i++){
					   if(isNaN(phone[i]))
					   {
					       alert("entered as wrong!!!number should not be in alphabets");
						   return false;
					    }
	                }
					if (repass=="") 
					{
						alert("Rewrite  Password");
						return false;
					}
					if(passwd!=repass)
					{
							alert("Reenter Password");
							return false;
					}
					alert("Thank You for Registration");
					return true;
					
					}
					
	</script>
</head>
<body>
		<h2>Form Validation</h2>
			<form px;" onsubmit="return validate()"> 
			    <label>Name:</label>
				<input type="name" id="nme"><br><br>
				<label>Password:</label>
				<input type="password" id="pwd"><br><br>
				<label>Phone:</label>
				<input type="number" id="phn"><br><br>
				<label>Reenter password:</label>
				<input type="password" id="repwd"><br><br>
				<button type="submit">Submit</button>
			</form>
</body>
</html>